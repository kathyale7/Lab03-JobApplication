<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JobApplication">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="106dp"
                android:layout_height="85dp" app:srcCompat="@drawable/portfolio" android:id="@+id/imageView3"
                android:layout_weight="1"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="290dp"
                android:layout_height="80dp" android:layout_weight="1">
            <TextView
                    android:text="Job Application"
                    android:layout_width="match_parent"
                    android:layout_height="43dp" android:id="@+id/bannerJobApplication" android:layout_weight="1"
                    android:textStyle="bold" android:textColor="@color/black" android:textAlignment="viewStart"
                    android:textSize="24sp" android:editable="false"/>
            <TextView
                    android:text="Please complete the form below to apply for a position with us."
                    android:layout_width="match_parent"
                    android:layout_height="45dp" android:id="@+id/bannerJobDescription" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="14sp" android:textAlignment="viewStart"
                    android:editable="false" android:duplicateParentState="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="391dp"
            android:layout_height="618dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Full Name"
                    android:layout_width="133dp"
                    android:layout_height="34dp" android:id="@+id/textView5" android:textSize="18sp"
                    android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtFirstName" android:layout_weight="1" android:textColorHighlight="#838383"
                    android:textColorLink="#474646" android:hint="First Name"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtLastName" android:layout_weight="1" android:textColorHighlight="#838383"
                    android:textColorLink="#474646" android:hint="Last Name"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="181dp">
            <TextView
                    android:text="Current Address"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp" android:id="@+id/textView7" android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"
                    android:textAlignment="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="257dp"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/editTextTextPostalAddress" android:hint="Street Address"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/editTextTextPersonName4" android:hint="Street Line 2"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editTextTextPersonName8" android:layout_weight="1" android:hint="City"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editTextTextPersonName9" android:layout_weight="1"
                            android:hint="State/Province"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editTextTextPersonName6" android:hint="PortalZip Code"/>
                    <EditText
                            android:layout_width="127dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editTextTextPersonName5" android:hint="Country"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Email Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="#000000" android:textStyle="bold"/>
            <EditText
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextTextEmailAddress" android:layout_weight="1"
                    android:hint="ex: name@gmail.com"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Phone Number"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editTextPhone" android:layout_weight="1" android:hint="Area Code"/>
            <EditText
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editTextPhone2" android:layout_weight="1" android:hint="Phone number"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="63dp">
            <TextView
                    android:text="Applying for position"
                    android:layout_width="307dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="435dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName11" android:layout_weight="1" android:hint="Position"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Start Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="#000000" android:textStyle="bold"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/editTextDate" android:layout_weight="1" android:hint="Date"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>