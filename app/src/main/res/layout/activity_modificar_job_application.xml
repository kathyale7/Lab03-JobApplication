<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModificarJobApplication">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="410dp"
            android:layout_height="703dp" android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="142dp"
                android:layout_height="109dp" app:srcCompat="@drawable/portfolio" android:id="@+id/imageView3"
                android:layout_weight="1"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="112dp" android:layout_weight="1">
            <TextView
                    android:text="Modify Job Application"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" android:id="@+id/bannerJobApplication"
                    android:layout_weight="1"
                    android:textStyle="bold" android:textColor="@color/black" android:textAlignment="viewStart"
                    android:textSize="24sp" android:editable="false"/>
            <TextView
                    android:text="Change information you need to update and click on the button below."
                    android:layout_width="242dp"
                    android:layout_height="wrap_content" android:id="@+id/bannerJobDescription"
                    android:layout_weight="1"
                    android:textColor="#000000" android:textSize="14sp" android:textAlignment="viewStart"
                    android:editable="false" android:duplicateParentState="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="362dp"
            android:layout_height="290dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Full Name"
                    android:layout_width="118dp"
                    android:layout_height="34dp" android:id="@+id/txtVFullName" android:textSize="16sp"
                    android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtEditFirstName" android:layout_weight="1"
                    android:hint="First Name" android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtEditLastName" android:layout_weight="1" android:textColorHighlight="#838383"
                    android:textColorLink="#474646" android:hint="Last Name" android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Email Address"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                    android:textSize="16sp" android:textColor="#000000"
                    android:textAlignment="textStart" android:textStyle="bold"/>
            <EditText
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txtEditEmail" android:layout_weight="1"
                    android:hint="ex: name@gmail.com" android:textSize="16sp" tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:text="Applying for position"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="435dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtEditPosition" android:layout_weight="1" android:hint="Position"
                    android:textSize="16sp" android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Start Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="16sp" android:textColor="#000000" android:textStyle="bold"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtEditDate" android:layout_weight="1" android:hint="Date"
                    android:textSize="16sp" android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
        <Button
                android:text="Modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnEdit"
                style="@style/Widget.AppCompat.Button" app:cornerRadius="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
                android:textSize="16sp" android:textAlignment="center" android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>