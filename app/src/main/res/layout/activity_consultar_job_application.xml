<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConsultarJobApplication">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="410dp"
            android:layout_height="703dp" android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="142dp"
                android:layout_height="74dp" app:srcCompat="@drawable/portfolio" android:id="@+id/imageView3"
                android:layout_weight="1"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Check Application"
                    android:layout_width="243dp"
                    android:layout_height="match_parent" android:id="@+id/bannerJobApplication"
                    android:layout_weight="1"
                    android:textStyle="bold" android:textColor="@color/black" android:textAlignment="viewStart"
                    android:textSize="24sp" android:editable="false" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="361dp"
            android:layout_height="547dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Full Name"
                    android:layout_width="118dp"
                    android:layout_height="34dp" android:id="@+id/txtVFullName" android:textSize="16sp"
                    android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtviewFirstName" android:layout_weight="1"
                    android:hint="First Name" android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck" android:editable="false" android:duplicateParentState="false"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtviewLastName" android:layout_weight="1" android:textColorHighlight="#838383"
                    android:textColorLink="#474646" android:hint="Last Name" android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck" android:editable="false" android:duplicateParentState="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="181dp">
            <TextView
                    android:text="Current  Address    "
                    android:layout_width="94dp"
                    android:layout_height="match_parent" android:id="@+id/textView7" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"
                    android:textAlignment="textStart"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="240dp"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/txtviewStreetAddress" android:hint="Street Address"
                        android:textSize="16sp" android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck"
                        android:editable="false"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/txtviewStreetAddress2" android:hint="Street Line 2" android:textSize="16sp"
                        android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/txtviewCity" android:layout_weight="1" android:hint="City"
                            android:textSize="16sp" tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/txtviewState" android:layout_weight="1"
                            android:hint="State/Province" android:textSize="16sp" tools:ignore="TouchTargetSizeCheck"
                            android:editable="false"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/txtviewZipCode" android:hint="Postal/Zip Code"
                            android:textSize="16sp" tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
                    <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/txtviewCountry" android:hint="Country" android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Email Address"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                    android:textSize="16sp" android:textColor="#000000"
                    android:textAlignment="textStart" android:textStyle="bold"/>
            <EditText
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txtviewEmail" android:layout_weight="1"
                    android:hint="ex: name@gmail.com" android:textSize="16sp" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Phone Number"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/txtviewAreaCode" android:layout_weight="1" android:hint="Area Code"
                    android:textSize="16sp" tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
            <EditText
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/txtviewPhoneNumber" android:layout_weight="1" android:hint="Phone number"
                    android:textSize="16sp" tools:ignore="TouchTargetSizeCheck" android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
            <TextView
                    android:text="Applying for position"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="435dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtviewPosition" android:layout_weight="1" android:hint="Position"
                    android:textSize="16sp" android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Start Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="16sp" android:textColor="#000000" android:textStyle="bold"
                    android:textAlignment="textStart"/>
            <EditText
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtviewDate" android:layout_weight="1" android:hint="Date"
                    android:textSize="16sp" android:minHeight="43dp" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="48dp" android:id="@+id/btnreturn2"
                style="@style/Widget.AppCompat.Button" android:textSize="15sp" android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_revert" app:cornerRadius="15dp" android:layout_gravity="center"
                app:iconPadding="1dp" tools:ignore="SpeakableTextPresentCheck"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>